rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Group chat media uploads
    match /group_chats/{chatId}/{userId}/{fileName} {
      // Allow authenticated users to upload media to chats they're part of
      allow write: if request.auth != null 
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024; // 10MB limit
      
      // Allow authenticated users to read media from chats they're part of
      // Note: You may want to add additional checks to verify chat membership
      allow read: if request.auth != null;
    }
    
    // Default: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

